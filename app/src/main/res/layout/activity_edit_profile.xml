<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.activites.relatedToSettings.EditProfileActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:background="@drawable/profile_bg">


                <FrameLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/test"
                        app:civ_border_color="#F9CFF6"
                        app:civ_border_width="@dimen/_3sdp" />

                    <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoRegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:alpha="0.8"
                        android:background="#ffffff"
                        android:drawableEnd="@drawable/ic_edit"
                        android:drawablePadding="@dimen/_4sdp"
                        android:gravity="center|end"
                        android:paddingStart="@dimen/_23sdp"
                        android:paddingEnd="@dimen/_23sdp"
                        android:text="@string/edit"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_11ssp" />

                </FrameLayout>
            </FrameLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"
                android:orientation="vertical"
                android:paddingStart="@dimen/_30sdp"
                android:paddingEnd="@dimen/_30sdp">


                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center|start"
                    android:text="@string/name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_13ssp" />

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:background="@drawable/border_edit_text"
                    android:drawableStart="@drawable/ic_user_profile"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center|start"
                    android:inputType="text"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textSize="@dimen/_12ssp" />

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginTop="@dimen/_15sdp"

                    android:layout_marginBottom="@dimen/_5sdp"

                    android:gravity="center|start"
                    android:text="@string/email"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_13ssp" />

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:background="@drawable/border_edit_text"
                    android:drawableStart="@drawable/ic_mail"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center|start"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textSize="@dimen/_12ssp" />

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"

                    android:gravity="center|start"
                    android:text="@string/address"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_13ssp" />

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:background="@drawable/border_edit_text"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center|start"
                    android:inputType="text"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textSize="@dimen/_12ssp" />


                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center|start"

                    android:text="@string/phone"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_13ssp" />

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:background="@drawable/border_edit_text"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center|start"
                    android:inputType="phone"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textSize="@dimen/_12ssp" />


                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldButton
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/btn_bg"
                    android:text="@string/save"
                    android:textColor="@color/whitee"
                    android:textSize="@dimen/_14ssp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>