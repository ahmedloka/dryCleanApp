<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.activites.afterHome.FormActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/_6sdp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/arrow_back_page_two"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="0dp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/back" />

            <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_toEndOf="@id/arrow_back_page_two"
                android:gravity="center"
                android:inputType="text"
                android:lines="1"
                android:maxLength="30"
                android:text="@string/fill_form"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_14ssp">

                <requestFocus />
            </my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldTextView>


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center">

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/wash_only"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14ssp" />

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/border_edit_text"
                    android:digits="0987654321"
                    android:gravity="center|start"
                    android:hint="@string/pcs"
                    android:inputType="number"
                    android:maxLength="8"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14ssp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center">

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/iron_only"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14ssp" />

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end|center"
                    android:background="@drawable/border_edit_text"
                    android:digits="0987654321"
                    android:gravity="center|start"
                    android:hint="@string/pcs"
                    android:inputType="number"
                    android:maxLength="8"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14ssp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center">

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/wash_and"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14ssp" />

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end|center"
                    android:background="@drawable/border_edit_text"
                    android:digits="0987654321"
                    android:gravity="center|start"
                    android:hint="@string/pcs"
                    android:inputType="number"
                    android:maxLength="8"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14ssp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center">

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldTextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/address"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14ssp" />

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end|center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/txt_address"
                    android:background="@drawable/border_edit_text"
                    android:gravity="center|start"
                    android:inputType="text"
                    android:paddingStart="@dimen/_110sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_110sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14ssp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center">

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldTextView
                    android:id="@+id/txt_mob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/phone"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14ssp" />

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end|center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/txt_mob"
                    android:background="@drawable/border_edit_text"
                    android:gravity="center|start"
                    android:inputType="text"
                    android:paddingStart="@dimen/_110sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_110sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14ssp" />


            </RelativeLayout>

            <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border_edit_text"
                android:gravity="start|center"
                android:hint="@string/desc"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingBottom="@dimen/_120sdp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="@dimen/_12ssp" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/btn_bg"
                    android:gravity="center"
                    android:text="@string/order"
                    android:textColor="@color/whitee"
                    android:textSize="@dimen/_15ssp" />

                <my.apps.ahmed.emad.dry.clean.activites.utilites.CairoBoldButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1.5"
                    android:background="@drawable/border_edit_text"
                    android:text="225 EGP"
                    android:textSize="@dimen/_14ssp" />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>